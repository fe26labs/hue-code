{
    "name": "hue-code",
    "icon": "media/icon-dark-circle-128.png",
    "galleryBanner": {
        "color": "#ffffff",
        "theme": "dark"
    },
    "displayName": "Hue Code",
    "description": "Make your hue lights come to life as you code.",
    "version": "0.1.10",
    "publisher": "matthewbill",
    "engines": {
        "vscode": "^1.27.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/matthewbill/hue-code.git"
    },
    "keywords": [
        "hue",
        "code",
        "lights"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "huecode.displayMenu",
                "title": "Hue Code Menu"
            },
            {
                "command": "huecode.refreshGroups",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "huecode.viewGroupInfo",
                "title": "View Info"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "hue-code",
                    "title": "Hue Code",
                    "icon": "media/light-bulb.svg"
                }
            ]
        },
        "views": {
            "hue-code": [
                {
                    "id": "bridges",
                    "name": "Bridges"
                },
                {
                    "id": "groups",
                    "name": "Groups"
                },
                {
                    "id": "lights",
                    "name": "Lights"
                },
                {
                    "id": "sensors",
                    "name": "Sensors"
                }
            ]
        }
    },
    "scripts": {
        "lint": "eslint .",
        "docs": "jsdoc ./src -r -d ./docs/api --verbose",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@matthewbill/eslint-config-mdb": "0.1.8",
        "jsdoc": "4.0.0"
    },
    "dependencies": {
        "@types/vscode": "1.74.0",
        "axios": "1.6.5"
    }
}
